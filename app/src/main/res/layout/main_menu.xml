<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
  android:id="@+id/main"
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  xmlns:app="http://schemas.android.com/apk/res-auto">



  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <android.support.v7.widget.Toolbar
      android:id="@+id/my_toolbar"
      android:layout_width="match_parent"
      android:layout_height="?attr/actionBarSize"
      android:background="?attr/colorPrimary"
      android:elevation="4dp"
      android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
      app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>


    <ViewFlipper
      android:id="@+id/container"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_below="@id/my_toolbar"
      android:layout_above="@id/logo_container"
      android:inAnimation="@android:anim/fade_in"
      android:outAnimation="@android:anim/fade_out">

      <include
      android:id="@+id/recycler_id"
      layout="@layout/recycler_view"/>

      <include
        android:id="@+id/loading_id"
        layout="@layout/loading"/>

      <include
        android:id="@+id/error_id"
        layout="@layout/error_page"/>

    </ViewFlipper>



      <ViewStub
        android:id="@+id/layout_stub"
        android:inflatedId="@+id/inflated_gif"
        android:layout="@layout/loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
      <ViewStub
        android:id="@+id/layout_stub_grid"
        android:inflatedId="@+id/inflated_grid"
        android:layout="@layout/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
      <ViewStub
        android:layout_gravity="center"
        android:id="@+id/layout_error_stub"
        android:inflatedId="@+id/inflated_error"
        android:layout="@layout/error_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>



    <FrameLayout
      android:visibility="gone"
      android:id="@+id/logo_container"
      android:layout_width="wrap_content"
      android:layout_height="50dp"
      android:layout_alignParentBottom="true">

      <include
        android:visibility="invisible"
        android:id="@+id/footer"
        layout="@layout/footer_logo"/>

    </FrameLayout>

  </RelativeLayout>

</android.support.constraint.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      >

      <ImageView
        android:id="@+id/bookImage"
        android:layout_width="120dp"
        android:layout_height="150dp"
        android:src="@drawable/da_vinci_code"
        android:scaleType="fitCenter"

        android:padding="16dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"/>

      <TextView
        android:id = "@+id/bookTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The Da Vinci Code"
        android:textSize="@dimen/frag2_bookTitleTextSize"

        android:paddingTop="16dp"
        android:layout_toRightOf="@id/bookImage"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        />

      <TextView
        android:id = "@+id/bookPublisher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dan Brown"
        android:textSize="@dimen/frag2_bookAuthorTextSize"

        android:paddingTop="16dp"
        android:layout_toRightOf="@id/bookImage"
        android:layout_below="@id/bookTitle"
        android:layout_centerHorizontal="true"
        />

    </RelativeLayout>


  </LinearLayout>
</android.support.constraint.ConstraintLayout>